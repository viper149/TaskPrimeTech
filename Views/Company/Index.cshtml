@model IEnumerable<Company>

@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
	<a asp-action="Create">Create New</a>
</p>
<p>
	<a asp-action="AddExtra">Add New Field</a>
</p>
<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CADDRESS)
            </th>
            <th>@Html.DisplayText("Actions")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
	            <td>
                    @Html.HiddenFor(modelItem => item.ID)
		            @Html.DisplayFor(modelItem => item.CID)
	            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CADDRESS)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 